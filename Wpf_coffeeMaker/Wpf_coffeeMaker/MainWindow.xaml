<Window x:Class="Wpf_coffeeMaker.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Wpf_coffeeMaker"
        mc:Ignorable="d"
        Title="MainWindow" Height="1000" Width="1497" Loaded="Window_Loaded">
    <Grid>
        <Image x:Name="Image_show" HorizontalAlignment="Left" Height="135" Margin="577,48,0,0" VerticalAlignment="Top" Width="184"/>
        <Image x:Name="Image_show2" HorizontalAlignment="Left" Height="153" Margin="835,48,0,0" VerticalAlignment="Top" Width="165"/>
        <Grid HorizontalAlignment="Left" Height="641" Margin="319,5,0,0" VerticalAlignment="Top" Width="1042" Background="#FFBDBDBD">
            <Image x:Name="Img_main" HorizontalAlignment="Left" Height="360" Margin="10,10,0,0" VerticalAlignment="Top" Width="640"/>
            <RadioButton x:Name="Rb_mix" Content="Mix" HorizontalAlignment="Left" Margin="650,65,0,0" VerticalAlignment="Top" IsChecked="True" Checked="Rb_imgShow_Checked" FontSize="18"/>
            <Button Content="Button" HorizontalAlignment="Left" Margin="650,23,0,0" VerticalAlignment="Top" Width="75" FontSize="18" Click="Button_Click"/>
            <RadioButton x:Name="Rb_color" Content="Color" HorizontalAlignment="Left" Margin="650,92,0,0" VerticalAlignment="Top" Checked="Rb_imgShow_Checked" FontSize="18" IsChecked="True"/>
            <TextBlock x:Name="TB_Bcup" HorizontalAlignment="Left" Margin="10,379,0,0" TextWrapping="Wrap" Text="Blue Cup" VerticalAlignment="Top" FontSize="18" FontWeight="Bold"/>
            <TextBlock x:Name="TB_Pcup" HorizontalAlignment="Left" Margin="10,440,0,0" TextWrapping="Wrap" Text="Pink Cup" VerticalAlignment="Top" FontSize="18" FontWeight="Bold"/>
            <Image x:Name="img_cupState" HorizontalAlignment="Left" Height="100" Margin="251,388,0,0" VerticalAlignment="Top" Width="500"/>
            <TextBlock x:Name="TB_Bcup_state" HorizontalAlignment="Left" Margin="98,379,0,0" TextWrapping="Wrap" Text="State" VerticalAlignment="Top" FontSize="18"/>
            <TextBlock x:Name="TB_Bcup_msg" HorizontalAlignment="Left" Margin="10,407,0,0" TextWrapping="Wrap" Text="Msg" VerticalAlignment="Top" FontSize="18"/>
            <TextBlock x:Name="TB_Pcup_state" HorizontalAlignment="Left" Margin="98,440,0,0" TextWrapping="Wrap" Text="State" VerticalAlignment="Top" FontSize="18"/>
            <TextBlock x:Name="TB_Pcup_msg" HorizontalAlignment="Left" Margin="10,468,0,0" TextWrapping="Wrap" Text="Msg" VerticalAlignment="Top" FontSize="18"/>
            <Button x:Name="Btn_resetTimeTick" Content="Reset" HorizontalAlignment="Left" Margin="10,562,0,0" VerticalAlignment="Top" Width="76" Click="Btn_resetTimeTick_Click" Height="26"/>
        </Grid>
        <ListView x:Name="LV_actionBase" ItemsSource="{Binding listOfAction}" HorizontalAlignment="Left" Height="717" Margin="10,10,0,0" VerticalAlignment="Top" Width="246" FontSize="22">
            <ListView.ItemContainerStyle>
                <Style TargetType="ListViewItem">
                    <Setter Property="HorizontalContentAlignment" Value="Stretch" />
                </Style>
            </ListView.ItemContainerStyle>
            <ListView.View>
                <GridView>
                    <GridViewColumn DisplayMemberBinding="{Binding Action}" Header="Action" Width="100"/>
                    <GridViewColumn DisplayMemberBinding="{Binding Detial}" Header="Detial" Width="130"/>
                </GridView>
            </ListView.View>

        </ListView>
        <Button x:Name="Btn_UrConnect" Content="Start Server" HorizontalAlignment="Left" Margin="319,656,0,0" VerticalAlignment="Top" Width="106" FontSize="16" Height="45" Click="Button_startServer_Click"/>
        <Button Content="Button" HorizontalAlignment="Left" Margin="445,651,0,0" VerticalAlignment="Top" Width="105" Height="60" Click="Button_goPosHome_Click"/>
        <Button Content="Record mode" HorizontalAlignment="Left" Margin="445,753,0,0" VerticalAlignment="Top" Width="105" Height="74" Click="Button_recordMode_Click"/>
        <Button Content="Write Pos" HorizontalAlignment="Left" Margin="555,753,0,0" VerticalAlignment="Top" Width="105" Height="74" Click="Button_recordWrite_Click"/>
        <Button Content="End Record" HorizontalAlignment="Left" Margin="665,753,0,0" VerticalAlignment="Top" Width="105" Height="74" Click="Button_recordEnd_Click"/>
        <ComboBox x:Name="Cb_Path" HorizontalAlignment="Left" Margin="800,664,0,0" VerticalAlignment="Top" Width="120" DropDownOpened="Cb_Path_DropDownOpened" FontSize="16" Height="47"/>
        <Button x:Name="Btn_goPath" Content="Go Path" HorizontalAlignment="Left" Margin="925,664,0,0" VerticalAlignment="Top" Width="75" Height="47" FontSize="16" Click="Btn_goPath_Click"/>
        <Ellipse x:Name="cir_UrState_off" Fill="#FFF4F4F5" HorizontalAlignment="Left" Height="15" Margin="319,706,0,0" Stroke="Black" VerticalAlignment="Top" Width="15"/>
        <Ellipse x:Name="cir_UrState_connecting" Fill="#FFF4F4F5" HorizontalAlignment="Left" Height="15" Margin="339,706,0,0" Stroke="Black" VerticalAlignment="Top" Width="15"/>
        <Ellipse x:Name="cir_UrState_on" Fill="#FFF4F4F5" HorizontalAlignment="Left" Height="15" Margin="359,706,0,0" Stroke="Black" VerticalAlignment="Top" Width="15"/>
        <Button Content="Start Action" HorizontalAlignment="Left" Margin="10,732,0,0" VerticalAlignment="Top" Width="137" Height="37" Click="Button_startAction_Click" FontSize="16"/>

    </Grid>
</Window>
